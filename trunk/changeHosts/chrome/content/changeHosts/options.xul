    <prefpane id="prefpane_definitions" label="#Definições">
        <hbox>
            <!-- First column -->
            <vbox>
                <groupbox orient="horizontal">
                    <caption label="#Definições"/>
                    <vbox>
                        <label value="&ch.createDefinitions;:" control="definition-name"/>
                        <hbox>
                            <textbox id="definition-name"/>
                            <button id="new-definition-button" label="&ch.doCreate;" oncommand="addDefinition();"/>
                        </hbox>
                        <spacer height="10"/>
                        <label value="#Selecione:" control="definition-name"/>
                        <listbox seltype="multiple" style="min-height: 30.7em; ">
                            <listitem label="Butter Pecan"/>
