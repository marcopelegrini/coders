<!DOCTYPE prefwindow SYSTEM "chrome://changeHosts/locale/changeHosts.dtd">

<prefwindow 
xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" 
xmlns:html="http://www.w3.org/1999/xhtml" 
windowtype="changeHosts:settings" 
id="changeHosts-settings" 
title="#change"
buttons="accept,cancel"
type="prefwindow">
    
	<script type="application/x-javascript" src="chrome://changeHosts/content/utils.js"/>	
    <script type="application/x-javascript" src="chrome://changeHosts/content/optionsOverlay.js"/>
